@model Tangy.Models.SubCategoryViewModels.SubCategoryAndCategoryViewModel
@{
    ViewData["Title"] = "Create";
}
<br />
<h2>Create SubCategory</h2>
<br />

<hr />
<div class="row">
    <div class="col-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCategory.Name" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="SubCategory.Name" class="form-control" />
                </div>
                <span asp-validation-for="SubCategory.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="SubCategory.CategoryId" class="custom-label"></label>
                </div>
                <div class="col-5">
                    @*<input asp-for="SubCategory.Name" class="form-control" />*@
                </div>
            </div>
            <div class="form-group row">
                <div class="col-3">
                    <label asp-for="isNew" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="isNew" class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-3"></div>
                <div class="col-5">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
